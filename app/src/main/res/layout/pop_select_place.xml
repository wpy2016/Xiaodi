<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_bg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_left"
    android:paddingRight="@dimen/padding_left"
    android:paddingTop="@dimen/small_divider">

    <com.wpy.cqu.xiaodi.view.wheel.PlacePicker
        android:id="@+id/id_pop_select_place_tp_place"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_pop_select_place_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/cancel"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/text_color_thin_gray"
            android:textSize="@dimen/normal_textsize" />

        <Button
            android:id="@+id/id_pop_select_place_confirm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/confirm"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/text_color_thin_gray"
            android:textSize="@dimen/normal_textsize" />

    </LinearLayout>
</LinearLayout>