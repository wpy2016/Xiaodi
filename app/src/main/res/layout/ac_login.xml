<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="@dimen/my_img_width"
            android:layout_height="@dimen/my_img_width"
            android:src="@drawable/xiaodi_logo"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <EditText
            android:id="@+id/id_ac_login_et_username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxLength="11"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:drawableBottom="@drawable/line_white"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:hint="@string/user_number"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/normal_textsize" />

        <EditText
            android:id="@+id/id_ac_login_et_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_left_double"
            android:background="@null"
            android:singleLine="true"
            android:drawableBottom="@drawable/line_white"
            android:gravity="center_horizontal"
            android:hint="@string/user_password"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/normal_textsize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical">

        <Button
            android:id="@+id/id_ac_login_btn_login"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_btn_selector"
            android:text="@string/login"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_textsize" />

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_left">

            <TextView
                android:id="@+id/id_ac_login_tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/padding_left_double"
                android:text="@string/forget_password"
                android:textColor="@android:color/white"
                android:textSize="@dimen/small_textsize" />

            <TextView
                android:id="@+id/id_ac_login_tv_registor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_left_double"
                android:textColor="@android:color/white"
                android:text="@string/register"
                android:textSize="@dimen/small_textsize" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_left_double"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/msg_item_height"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/line_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_divider"
                android:textColor="@android:color/white"
                android:layout_marginRight="@dimen/small_divider"
                android:text="@string/welcome_you"
                android:textSize="@dimen/small_textsize" />

            <View
                android:layout_width="@dimen/msg_item_height"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/line_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_left"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_ac_login_iv_wechat"
                android:layout_width="@dimen/normal_imageview_width"
                android:layout_height="@dimen/normal_imageview_height"
                android:src="@drawable/weixin" />

            <ImageView
                android:id="@+id/id_ac_login_iv_weibo"
                android:layout_width="@dimen/normal_imageview_width"
                android:layout_height="@dimen/normal_imageview_height"
                android:layout_marginLeft="@dimen/other_login_divide"
                android:layout_marginRight="@dimen/other_login_divide"
                android:src="@drawable/weibo" />

            <ImageView
                android:id="@+id/id_ac_login_iv_qq"
                android:layout_width="@dimen/normal_imageview_width"
                android:layout_height="@dimen/normal_imageview_height"
                android:src="@drawable/qq" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
