<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_gary"
    android:orientation="vertical">

    <include layout="@layout/ac_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_fg_carry_record_tv_my_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/background_color_gary"
            android:text="@string/my_publish_record"
            android:textColor="@color/text_color_heavy_gray"
            android:textSize="@dimen/hall_option_type_tv_size" />
        <TextView
            android:id="@+id/id_fg_carry_record_tv_my_carry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/background_color_gary"
            android:text="@string/my_receive_record"
            android:textColor="@color/text_color_heavy_gray"
            android:textSize="@dimen/hall_option_type_tv_size" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/id_fg_carry_record_tv_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
